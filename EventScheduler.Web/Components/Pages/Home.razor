@page "/"

<PageTitle>Event Scheduler</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 mb-4">Welcome to Event Scheduler</h1>
            <p class="lead mb-4">
                Organize your life with our powerful event scheduling application.
                Create, manage, and track your events effortlessly.
            </p>
            
            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-calendar-event display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Easy Scheduling</h5>
                            <p class="card-text">Create and manage events with a simple, intuitive interface</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-globe display-4 text-success mb-3"></i>
                            <h5 class="card-title">Public Events</h5>
                            <p class="card-text">Discover and share public events with the community</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="bi bi-shield-check display-4 text-info mb-3"></i>
                            <h5 class="card-title">Secure & Private</h5>
                            <p class="card-text">Your data is protected with industry-standard security</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block mb-5">
                <a href="/public-events" class="btn btn-success btn-lg px-5">View Public Events</a>
                <a href="/register" class="btn btn-primary btn-lg px-5 ms-md-3">Get Started</a>
                <a href="/login" class="btn btn-outline-primary btn-lg px-5 ms-md-3">Login</a>
            </div>
        </div>
    </div>
</div>
