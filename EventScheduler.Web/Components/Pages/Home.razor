@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Event Scheduler - Organize Your Schedule</PageTitle>

<!-- Home page styles now in styles/pages/home.css -->

<div class="home-container">
    <div class="home-content">
        <h1 class="home-title">📅 Event Scheduler</h1>
        <p class="home-subtitle">
            Organize your life with our powerful event scheduling application.
            Create, manage, and track your events effortlessly with an intuitive interface designed for productivity.
        </p>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-calendar-event text-primary"></i>
                </div>
                <h5>Smart Scheduling</h5>
                <p>Create and manage events with drag-and-drop, multiple views, and real-time updates. Never miss an important date again.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-globe text-success"></i>
                </div>
                <h5>Public Events</h5>
                <p>Discover and share public events with the community. Stay connected with what's happening around you.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-shield-check text-info"></i>
                </div>
                <h5>Secure & Private</h5>
                <p>Your data is protected with industry-standard security, JWT authentication, and encrypted communications.</p>
            </div>
        </div>

        @if (isAuthenticated)
        {
            <div class="stats-section">
                <div class="stat-card">
                    <div class="stat-value">✓</div>
                    <div class="stat-label">You're logged in</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">∞</div>
                    <div class="stat-label">Unlimited Events</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">24/7</div>
                    <div class="stat-label">Always Available</div>
                </div>
            </div>
        }
        else
        {
            <div class="stats-section">
                <div class="stat-card">
                    <div class="stat-value">Free</div>
                    <div class="stat-label">Login to get started</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">∞</div>
                    <div class="stat-label">Unlimited Events</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">24/7</div>
                    <div class="stat-label">Always Available</div>
                </div>
            </div>
        }

        <div class="action-buttons">
            <a href="/public-events" class="home-btn home-btn-success">
                <i class="bi bi-globe"></i>
                View Public Events
            </a>
            @if (isAuthenticated)
            {
                <a href="/calendar-view" class="home-btn home-btn-primary">
                    <i class="bi bi-calendar-heart"></i>
                    My Calendar
                </a>
                <a href="/calendar-list" class="home-btn home-btn-outline">
                    <i class="bi bi-list-task"></i>
                    My Events
                </a>
            }
            else
            {
                <a href="/register" class="home-btn home-btn-primary">
                    <i class="bi bi-person-plus"></i>
                    Get Started Free
                </a>
                <a href="/login" class="home-btn home-btn-outline">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Login
                </a>
            }
        </div>
    </div>
</div>

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }
}
