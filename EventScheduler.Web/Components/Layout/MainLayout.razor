@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<!-- Layout styles now in styles/layout.css and styles/layout-enhancements.css -->

<div class="layout-wrapper">
    <!-- Navigation Bar -->
    <NavBar />

    <!-- Main Content -->
    <main>
        @Body
    </main>

    <!-- Footer -->
    <footer>
        <div class="container text-center">
            <p class="footer-text">
                &copy; @DateTime.Now.Year Event Scheduler. Built with ❤️ using .NET 9.0 and Blazor Server. 
                <a href="https://github.com" class="footer-link" target="_blank" rel="noopener noreferrer">View on GitHub</a>
            </p>
        </div>
    </footer>
</div>

<!-- Blazor Error UI styles now in styles/components/blazor-error-ui.css -->

<!-- Blazor Error UI -->
<div id="blazor-error-ui" data-nosnippet>
    <div class="blazor-error-content">
        <i class="bi bi-exclamation-triangle"></i>
        An unhandled error has occurred.
        <a href="." class="reload">Reload</a>
        <span class="dismiss">🗙</span>
    </div>
</div>

<!-- Blazor Reconnection UI removed - handled in App.razor -->


