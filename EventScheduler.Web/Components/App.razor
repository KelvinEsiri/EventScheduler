<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    
    <!-- FullCalendar CSS - Note: CSS is included in the JS bundle for v6 global builds -->
    <!-- The index.global.min.js includes all necessary styles -->
    
    <!-- Application Styles - Organized and Modular -->
    <link rel="stylesheet" href="@Assets["css/main.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="manifest.json" />
    <meta name="theme-color" content="#0d6efd" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="EventScheduler" />
    
    <HeadOutlet />
</head>

<body>
    <Routes />
    
    <!-- Blazor SignalR Reconnection Modal - NasosoTax Simple Implementation -->
    <div id="components-reconnect-modal" class="components-reconnect-hide" data-nosnippet>
        <div class="show">
            <h5>Attempting to reconnect to the server...</h5>
            <div class="loader"></div>
        </div>
        <div class="failed">
            <h5>Reconnection failed</h5>
            <p>Click <a href="javascript:location.reload()">here</a> to reload the page.</p>
        </div>
        <div class="rejected">
            <h5>Connection rejected</h5>
            <p>Reload the page to restore functionality.</p>
        </div>
    </div>
    
    <!-- Reconnection modal styles now in css/components/reconnection-modal.css -->
    
    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="@Assets["lib/bootstrap/dist/js/bootstrap.bundle.min.js"]"></script>
    
    <!-- Load Blazor framework FIRST -->
    <script src="_framework/blazor.web.js"></script>
    
    <!-- Load reconnection handler AFTER Blazor (v=14 - Hard reload with timestamp) -->
    <script src="js/reconnection-handler.js?v=14"></script>
    
    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
        <!-- FullCalendar interop (v=15 - Auto-restore online state) -->
    <script src="js/fullcalendar-interop.js?v=15"></script>

    <!-- PWA and Offline Support -->
    <script src="js/pwa-registration.js"></script>
    <script src="js/indexeddb-manager.js?v=2"></script>
    <script src="js/connectivity-manager.js?v=3"></script>    <script>
        // Global error handler for unhandled promise rejections (offline mode)
        // NOTE: We log the error but DON'T preventDefault() so .catch() handlers still run
        window.addEventListener('unhandledrejection', function(event) {
            if (event.reason && event.reason.message) {
                const msg = event.reason.message;
                // Log Blazor circuit connection errors but let them propagate to .catch() handlers
                if (msg.includes('Cannot send data if the connection is not in the') ||
                    msg.includes('not in the \'Connected\' State') ||
                    msg.includes('Connection disconnected')) {
                    console.warn('🔌 Blazor circuit disconnected - offline fallback will handle this');
                    // Don't preventDefault() - let the promise .catch() handler run!
                    return;
                }
            }
        });
        
        window.authHelper = {
            setAuthData: function (username, email, userId, token) {
                localStorage.setItem('auth_username', username);
                localStorage.setItem('auth_email', email);
                localStorage.setItem('auth_userId', userId.toString());
                localStorage.setItem('auth_token', token);
            },
            
            getAuthData: function () {
                return {
                    Username: localStorage.getItem('auth_username') || '',
                    Email: localStorage.getItem('auth_email') || '',
                    UserId: localStorage.getItem('auth_userId') || '',
                    Token: localStorage.getItem('auth_token') || ''
                };
            },
            
            clearAuthData: function () {
                localStorage.removeItem('auth_username');
                localStorage.removeItem('auth_email');
                localStorage.removeItem('auth_userId');
                localStorage.removeItem('auth_token');
            },
            
            navigateToCalendar: function () {
                window.location.href = '/calendar-view';
            }
        };
    </script>
</body>

</html>
